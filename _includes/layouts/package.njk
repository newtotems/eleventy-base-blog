---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% set packid = page.filePathStem | replace("/packs/", "") %}

{% for item in packages %}
    {% if item.packageid == packid %}

        {% for customer in customers %}
            {% if customer.customerid == item.customer%}
                {% set fname = customer.firstname %}
                <section class="row blog-post justify-content-center d-flex d-print-none">
                    <div class="col-lg-6 pt-4 mt-4 row">
                        <h1 class="row d-flex d-print-none text-center" style="width:100%">Here's whats in your pack this month,  {{fname}}</h1>
                        <p class="d-flex d-print-none text-center" style="width:100%">Remember, each pack is unique to you! Mention <strong>#thefacepack</strong> and tag <a href="https://instagram.com/the.face.pack" target="_blank">@the.face.pack</a> when sharing your unboxings.</p>
                    </div>
                </section>
                {% include "layouts/label.njk" %}

            {% endif %}
        {% endfor %}

        <section class="row blog-post justify-content-center d-print-none">
            <div class="col-lg-5">

                {% for unit in stock %}
                    {% for mask in item.contents %}
                        {% if unit.itemid == mask %}
                            <div class="row pack-item">
                                <div class="col-md-4">
                                    {% for image in unit.imgs %}
                                        <img src="{{image}}" alt="" height="200"/>
                                    {% endfor %}
                                    {% for brand in brands %}
                                   
                                        {% if brand.id == unit.brandid %}
                                       
                                            {% if brand.logo %}
<img src="/img/brands/{{brand.logo}}" alt="{{brand.name}}" style="max-width:200px">
                                            {% endif %}

                                              {% if brand.country %}
                                                    {% for flag in countries %}
                                                    {% if brand.country == flag.id %}
                                                        <img src="/img/flags/{{flag.flag}}" alt="{{flag.name}}" title="{{flag.name}}" height="30">
                                                    {% endif %}
                                                    {% endfor %}
                                                {% endif %}
                                            
                                        {% endif %}
                                    {% endfor %}
                                    {% if unit.url %}
                                        <p>
                                            <a href="{{unit.url}}" target="_blank">More Info</a>
                                        </p>
                                    {% endif %}
                                </div>
                                <div class="col-md-8 text-left">
                                    <h2>{{unit.name}}</h2>
                                    <p>{{unit.description}}</p>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}

            {% endif %}
        {% endfor %}
    </div>
</section>
