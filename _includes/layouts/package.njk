---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% include "layouts/label.njk" %}

{% set packid = page.filePathStem | replace ("/packs/","") %}

{% for item in packages %}
{% if item.packageid == packid %}

{% for customer in customers %}
{% if customer.customerid == item.customer%}
    <h1 class="row d-print-none">Here's whats in this month's pack, {{customer.firstname}}</h1>
{% endif %}
{% endfor %}

<section class="row d-print-none">
{% for unit in stock %}
    {% for mask in item.contents %}
       {% if unit.stockid == mask %}

<div class="col-4"></div>
    <div class="col-8 text-left">
            <h4>{{unit.name}}</h4>
            <p>{{unit.description}}</p>
    </div>
        {% endif %}
    {% endfor %}
{% endfor %}
</section>

  {% endif %}
{% endfor %}