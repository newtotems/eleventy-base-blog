---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% for customer in customers %}
{% if customer.customerid == item.customer%}
{% set fname = customer.firstname %}
    <h1 class="row d-print-none">Here's whats in your pack this month, {{fname}}</h1>
    <p>Remember, each pack is unique.</p>

{% include "layouts/label.njk" %}

{% endif %}
{% endfor %}

<section class="row blog-post justify-content-center d-print-none">

    <div class="col-lg-5 pt-4 mt-4 row">
{% set packid = page.filePathStem | replace ("/packs/","") %}

{% for item in packages %}
{% if item.packageid == packid %}

{% for unit in stock %}
    {% for mask in item.contents %}
       {% if unit.stockid == mask %}

<div class="col-4">
    image
</div>
    <div class="col-8 text-left">
            <h2>{{unit.name}}</h2>
            <p>{{unit.description}}</p>
    </div>
        {% endif %}
    {% endfor %}
{% endfor %}


  {% endif %}
{% endfor %}
</div>
</section>