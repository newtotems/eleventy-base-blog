---
layout: layouts/base.njk
templateClass: tmpl-post
---

{{ content | safe }}

{% set packid = page.filePathStem | replace ("/posts/packs/","") %}

{% for item in packages %}
{% if item.packageid == packid %}

{% for customer in customers %}
{% if customer.customerid == item.customer%}
    <h1>Here's whats in your Face Pack this month, {{customer.firstname}} {{customer.lastname}}</h1>
{% endif %}
{% endfor %}

<section class="row">
{% for unit in stock %}
    {% for mask in item.contents %}
       {% if unit.stockid == mask %}

<div class="col-4"></div>
    <div class="col-8">
            {{unit.name}} - {{unit.description}}
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}
</section>

  {% endif %}
{% endfor %}